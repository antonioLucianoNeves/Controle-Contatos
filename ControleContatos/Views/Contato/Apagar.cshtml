@model ContatoModel
@{
    ViewData["Title"] = "Confirmação de apagar o contato";
}

<div class="text-center">
    <h3>Realmente deseja apagar(@Model.Nome)</h3>
</div>

<a class="btn btn-primary btn-block" role="button" asp-controller="Contato" asp-action="Index">Confirma cancelar</a>
<a class="btn btn-danger btn-block" role="button" asp-controller="Contato" asp-action="ApagarConf" asp-route-id="@Model.Id">Confirma exclusão</a>